<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe List</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <div class="container mt-5 pt-5">
        <main>
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8">
                    <div class="card shadow-lg">
                        <div class="card-body text-center">
                            <h1 class="card-title mb-4">Welcome to FinTech Recipe Manager</h1>
                            <p class="card-text">Manage your finances and recipes with our secure and easy-to-use platform.</p>
                            <p class="card-text mb-4">Get started by creating an account or logging in.</p>
                            <div class="d-grid gap-2 col-6 mx-auto mb-4">
                                <a href="/register" class="btn btn-success">Register</a>
                                <a href="/login" class="btn btn-primary">Login</a>
                            </div>
                            
                            <h2>Recipe List</h2>
                            <a href="/recipes/new" class="btn btn-info mb-3">Add New Recipe</a>
                            <ul class="list-group">
                                <% if (typeof recipes !== 'undefined') { %>
                                    <% recipes.forEach(recipe => { %>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a>
                                            <div>
                                                <a href="/recipes/<%= recipe.id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                                                <form action="/recipes/<%= recipe.id %>?_method=DELETE" method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                                </form>
                                            </div>
                                        </li>
                                    <% }); %>
                                <% } else { %>
                                    <li class="list-group-item">No recipes available</li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    
    <%- include('partials/footer') %>
    
</html>
